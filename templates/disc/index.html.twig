{% extends 'base.html.twig' %}

{% block title %}VelvetRecordsController
{% endblock %}

{% block body %}
	<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_disc_index') }}">Disque</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Nouveau Disque</li>
		</ol>
	</nav>
	<div class="container bg-info">
		<div class="row mt-5">
			<h1 class="d-block  d-flex justify-content-center bg-primary mb-5">Liste des disques</h1>
			<a href="{{path('app_disc_new')}}" class="btn btn-body bg-body mb-8  ">Ajouter un Nouveau Disque</a>

		</div>
		<div class="row g-2">
			{% for disc in discs %}
				<div class="col-6 col-lg-3 ">
					<h4>{{disc.title}}</h4>

					<div class="ratio ratio-1x1">
						<img class="col-4 col-lg-3 img-fluid" src="{{asset ('img/')}}{{disc.picture}}">

					</div>
					<div>
						<p class="label">Label :{{disc.label}}</p>
						<p class="label">Année :{{disc.year}}</p>
						<p class="label">Genre :{{disc.genre}}</p>
						<p class="label">Prix  :{{disc.price}}€</p>
						<p class="label">artist :{{disc.artist}}</p>
						<a href="{{ path ('app_disc_show', {id: disc.id})}} " class="btn btn-info d-block mt-3 w-25 bg-dark text-light">Détails</a>
					</div>

				</div>

			{% endfor %}


		</div>
	</div>
{% endblock %}
